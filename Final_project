#include <iostream>
#include <vector>
#include <algorithm>
#include <numeric>
#include <iomanip>
#include <cmath>

#include <SFML/Window.hpp>
#include <SFML/Graphics.hpp>

class Objects : public sf::Sprite {
public:

private:

};

int main()
{
    sf::RenderWindow window(sf::VideoMode(600, 800), "Project X"); // create the window

    sf::Clock clock;

    sf::Texture tex_target;

    sf::Sprite target_1, target_2,target_3, target_4, target_5; //targets def
    std::vector <sf::Sprite> targets; // targets vector def
    if (!tex_target.loadFromFile("grass.png")) {
        std::cerr << "Could not load texture" << std::endl;
        return 1;
    } else {
        tex_target.setRepeated(true);
        //-----------------------------------------------------------------------------//target_1
        target_1.setTexture(tex_target);
        target_1.setScale(.5,.5);
        target_1.setPosition(0,130);
        target_1.setTextureRect(sf::IntRect(0, 0, 100/.5, 20/.5));
        targets.push_back(target_1);
        //-----------------------------------------------------------------------------//target_2
        target_2.setTexture(tex_target);
        target_2.setScale(.5,.5);
        target_2.setPosition(0,100);
        target_2.setTextureRect(sf::IntRect(0, 0, 80/.5, 20/.5));
        targets.push_back(target_2);
        //-----------------------------------------------------------------------------//target_3
        target_3.setTexture(tex_target);
        target_3.setScale(.5,.5);
        target_3.setPosition(0,70);
        target_3.setTextureRect(sf::IntRect(0, 0, 60/.5, 20/.5));
        targets.push_back(target_3);
        //-----------------------------------------------------------------------------//target_4
        target_4.setTexture(tex_target);
        target_4.setScale(.5,.5);
        target_4.setPosition(0,40);
        target_4.setTextureRect(sf::IntRect(0, 0, 40/.5, 20/.5));
        targets.push_back(target_4);
        //-----------------------------------------------------------------------------//target_5
        target_5.setTexture(tex_target);
        target_5.setScale(.5,.5);
        target_5.setPosition(0,10);
        target_5.setTextureRect(sf::IntRect(0, 0, 20/.5, 20/.5));
        targets.push_back(target_5);
    }

    while (window.isOpen()) {

        sf::Time elapsed = clock.restart();
        sf::Event event;

        while (window.pollEvent(event)) {
            if (event.type == sf::Event::Closed)
                window.close();
        }
        window.clear(sf::Color::Black);

        for(auto &t : targets){
            window.draw(t); // test draw
        }

        window.display();
    }

    return 0;
}
